<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jins.db.whatsappgroup.controllers.MessageController">

    <!-- En-tête -->
    <top>
        <Label text="Discussion" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10px;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- Zone de messages -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background:transparent;">
            <VBox fx:id="messageContainer" spacing="10" padding="10">
                <!-- Messages seront ajoutés ici dynamiquement -->
            </VBox>
        </ScrollPane>
    </center>

    <!-- Champ de saisie -->
    <bottom>
        <HBox spacing="10" padding="10">
            <TextField fx:id="messageInput" HBox.hgrow="ALWAYS" promptText="Votre message..." />
            <Button fx:id="sendButton" text="Envoyer" onAction="#envoyerMessage"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        </HBox>
    </bottom>

</BorderPane>
